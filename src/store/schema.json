{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsStore",
  "title": "Store Schema",
  "type": "object",
  "properties": {
    "section": {
      "description": "The name of the section.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of the section?"
    },
    "parentPage": {
      "description": "The name of the parent page.",
      "type": "string",
      "optional": true,
      "$default": {
        "$source": "argv",
        "index": 2
      }
    },
    "page": {
      "description": "The name of the page.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What is the name of the page?"
    },
    "name": {
      "description": "The name of the shared module.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 3
      },
      "x-prompt": "What is the name of the shared module?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the store.",
      "visible": false
    }
  },
  "required": []
}