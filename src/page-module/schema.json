{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsPageModule",
  "title": "Page Module Schema",
  "type": "object",
  "properties": {
    "section": {
      "description": "The name of the section.",
      "type": "string",
      "minLength": 1,
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What the name of the section?"
    },
    "parent": {
      "type": "string",
      "description": "The name of the parent page.",
      "optional": true,
      "$default": {
        "$source": "argv",
        "index": 2
      }
    },
    "name": {
      "description": "The name of the page.",
      "type": "string",
      "minLength": 1,
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "What should be the name of the page?"
    },
    "store": {
      "type": "boolean",
      "description": "When true, installs store for the page.",
      "x-prompt": "Would you like to add store?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the page.",
      "visible": false
    }
  },
  "required": [
    "section",
    "name"
  ]
}