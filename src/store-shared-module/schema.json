{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsSharedModuleStore",
  "title": "Store Shared Module Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the shared module.",
      "type": "string",
      "x-prompt": "What is the name of the shared module?"
    },
    "intoSection": {
      "type": "boolean",
      "description": "When true, generates store inside a section."
    },
    "section": {
      "description": "The name of the section.",
      "type": "string"
    },
    "parent": {
      "description": "The name of the parent page.",
      "type": "string"
    },
    "page": {
      "description": "The name of the page.",
      "type": "string"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the store.",
      "visible": false
    }
  },
  "required": [
    "name",
    "intoSection"
  ]
}